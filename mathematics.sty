\newcommand{\schritt}[2][l]{
	\color{secondcolor}
	\IfEqCase{#1}
	{
		{l}{\left\downarrow\quad #2 \right.} % arrow on the left side
		{r}{\left. #2 \quad\right\downarrow} % arrow on the right side
		{n}{#2} % without arrow
	}
}
\newcommand{\weil}[2][l]{\schritt[#1]{\text{#2}}}

